<h1>Our cocktails details... </h1>

  <%= @cocktail.name %>


  <h2>Ingredients</h2>
    <ul class="list-unstyled">
      <% @cocktail.doses.each do |dose| %>
        <li>
          <%= dose.description %> - <%= dose.ingredient %>
          <%= link_to dose_path(dose), method: :delete, class: "btn btn-danger btn-xs" do %>
            <i class="fa fa-trash" aria-hidden="true"></i>
          <% end %>
        </li>
      <% end %>
    </ul>

    <%= link_to "+", new_cocktail_dose_path(@cocktail), class: "btn btn-info" %>

    <%= link_to "Back to all", cocktails_path %>

